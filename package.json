{
  "name": "ecstatic",
  "version": "0.0.1",
  "description": "CLI tool for website optimization - download, optimize, and deploy static sites",
  "type": "module",
  "bin": {
    "ecstatic": "./bin/ecstatic"
  },
  "devDependencies": {
    "bun": "^1.2.20",
    "directory-import": "^3.3.2",
    "http-server": "^14.1.1"
  },
  "scripts": {
    "compile": "rm -rf ./dist-exec && mkdir -p ./dist-exec && npx bun build --compile --define process.env.ECSTATIC_ENV='\"production\"' --minify --bytecode --target=bun-linux-x64 ./bin/ecstatic.js --outfile ./dist-exec/ecstatic",
    "jampack": "rm -rf ./dist/* && cp -r ./scraped/* ./dist/ && jampack ./dist --cleancache",
    "publish": "npm run compile && cp ./dist-exec/ecstatic ../ecstatic-cli/bin/",
    "serve": "http-server ./dist",
    "serve-scraped": "http-server ./scraped",
    "test": "bun test",
    "zip": "rm dist.zip && zip -r dist.zip ./dist/"
  },
  "@parcel/transformer-css": {
    "errorRecovery": true
  },
  "htmlnano": {
    "removeRedundantAttributes": false
  },
  "dependencies": {
    "@divriots/jampack": "file:../jampack",
    "@shinsenter/defer.js": "file:../defer.js",
    "cheerio": "^1.1.2",
    "commander": "^12.1.0",
    "deepmerge": "^4.3.1"
  }
}